---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'BrightHighTech',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact',
        href: '/contact',
        target: '_blank',
      },
      { text: 'Learn more', href: '#about' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight"> BrightHighTech</span>: Aerospace Import-Export & Supply Solutions
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
       Empowering global aerospace excellence through precise import-export solutions and comprehensive supply chain management.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="about"
    tagline="About"
    title="What Does BrightHighTech Do?"
    subtitle="BrightHighTech provides expert import-export solutions and comprehensive supply chain management to streamline logistics, ensure compliance, and optimize efficiency for the aerospace industry."
    items={[
      {
        title: 'Global Aerospace Import-Export Expertise',
        description:
          'Discover how BrightHighTech\'s global reach and deep industry knowledge streamline the import-export processes for aerospace components, ensuring timely delivery and compliance.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Comprehensive Supply Chain Management',
        description:
          'Learn about our end-to-end supply chain management services that optimize efficiency, reduce costs, and enhance the reliability of aerospace part deliveries.',
        icon: 'tabler:components',
      },
      {
        title: 'Advanced Logistics Solutions for Aerospace',
        description:
          'Explore our advanced logistics solutions that include strategic planning, real-time tracking, and secure transport to meet the rigorous demands of the aerospace industry.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Customs Clearance and Compliance',
        description:
          'Understand our meticulous approach to customs clearance and regulatory compliance, ensuring your aerospace shipments meet all international standards and regulations.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Strategic Sourcing and Procurement',
        description:
          "BrightHighTech offers strategic sourcing and procurement services, connecting you with reliable suppliers to ensure high-quality aerospace components at competitive prices.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Risk Management in Aerospace Supply Chains',
        description:
          'Delve into our risk management strategies that identify potential disruptions in the supply chain and implement proactive measures to mitigate them.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Services"
    title="BrightHighTech's Blueprint"
    items={[
      {
        title: 'Innovative Technology Integration',
        description:
          'See how BrightHighTech integrates cutting-edge technology to enhance the efficiency, transparency, and security of aerospace import-export operations.',
      },
      {
        title: 'Sustainable Aerospace Supply Solutions',
        description:
          'Learn about our commitment to sustainability and how we implement eco-friendly practices in our supply chain solutions for the aerospace industry.',
      },
      {
        title: 'Supplier Relationship Management',
        description:
          'Discover our approach to building and maintaining strong relationships with aerospace suppliers, ensuring consistent quality and reliability.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
